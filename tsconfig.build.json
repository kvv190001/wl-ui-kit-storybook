{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": false,
    "isolatedModules": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}
